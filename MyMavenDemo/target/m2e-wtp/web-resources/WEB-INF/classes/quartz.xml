<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="weekJob" class="com.demo.job.WeekJob" />
	<bean id="myJob" class="com.demo.job.MyJob" />

	<bean id="weekJobDetailFactoryBean"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="myJob" />
		<property name="targetMethod" value="print" />
		<property name="concurrent" value="false" />
	</bean>

	<!-- 每天2点执行 -->
	<bean id="weekCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="weekJobDetailFactoryBean" />
		<property name="cronExpression">
			<value>0 0 2 * * ?</value>
		</property>
	</bean>

	<!-- 启动时执行一次 -->
	<bean id="simpleTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail">
			<ref bean="weekJobDetailFactoryBean" />
		</property>
		<!-- 延迟5s启动 -->
		<property name="startDelay">
			<value>5000</value>
		</property>
		<!-- 执行时间间隔 -->
		<property name="repeatInterval">
			<value>1</value>
		</property>
		<!-- 执行次数 -->
		<property name="repeatCount">
			<value>1</value>
		</property>
	</bean>

	<bean id="schedulerFactoryBean"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="weekCronTrigger" />
				<ref bean="simpleTrigger" />
			</list>
		</property>
	</bean>
</beans>
