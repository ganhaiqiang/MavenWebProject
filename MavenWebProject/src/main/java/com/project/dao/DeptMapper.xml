            <if test="dname != null" >
                DNAME = #{dname,jdbcType=VARCHAR},
            </if>
            <if test="loc != null" >
                LOC = #{loc,jdbcType=VARCHAR},
            </if>
        </set>
        where DEPTNO = #{deptno,jdbcType=BIGINT}
    </update>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long" >
        delete from dept
        where DEPTNO = #{deptno,jdbcType=BIGINT}
    </delete>

